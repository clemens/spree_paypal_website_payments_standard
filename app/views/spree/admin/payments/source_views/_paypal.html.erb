<fieldset>
  <legend>PayPal</legend>

  <table class="index">
    <tr>
      <th colspan="6">Transaction</th>
    </tr>
    <tr>
      <td><label>Amount:</label></td>
      <td>
        <%= number_to_currency(payment.source.amount, :unit => payment.source.currency) %>
      </td>
    </tr>
    <tr>
      <td><label>Status:</label></td>
      <td>
        <%= payment.source.payment_status %>
      </td>
    </tr>
    <tr>
      <td><label>Date:</label></td>
      <td>
        <%= payment.source.payment_date %>
      </td>
    </tr>
  </table>
</fieldset>
